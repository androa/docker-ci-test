{
  "name": "docker-ci-test",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "dependencies": {
    "restify": "^8.3.3"
  },
  "devDependencies": {
    "eslint": "^6.0.1",
    "nodemon": "^1.9.2",
    "supertest": "^4.0.2",
    "tap": "^14.4.1",
    "tap-xunit": "^2.4.1"
  },
  "scripts": {
    "lint": "eslint lib/ test/",
    "test": "tap test/*.test.js -R spec",
    "watch": "nodemon -q -x npm test",
    "ci-test": "npm run lint && mkdir -p report/junit/ && npm run test -- -R tap | tap-xunit > report/junit/unit-test-results.xml"
  },
